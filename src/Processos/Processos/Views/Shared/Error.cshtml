@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
@if (Model.ShowRequestId)
{
<div class="d-flex flex-column" id="content-wrapper">
    <div id="content">
        <nav class="navbar navbar-expand bg-white shadow mb-4 topbar static-top navbar-light" style="margin: -18px;">
            <div class="container-fluid">
                <button class="btn btn-link d-md-none rounded-circle me-3" id="sidebarToggleTop" type="button"><i class="fas fa-bars"></i></button>
                <h3 class="text-dark mb-0"></h3>
                <h1 style="position: relative;padding-right: 0px;padding-left: 0px;margin-left: 0px;margin-bottom: 0px;margin-top: 21px;font-size: 20px;"></h1>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="text-center mt-5">
                <div class="error mx-auto" data-text="404">
                    <p class="m-0">404</p>
                </div>
                <p class="text-dark mb-5 lead"> <code>@Model.RequestId</code></p>
                <p class="text-black-50 mb-0">Ocorreu um erro.</p><a href="/">← Voltar ao Painel</a>
            </div>
        </div>
    </div>
    <footer class="bg-white sticky-footer" style="height: 17px;padding: 31px 0px;">
        <div class="container my-auto" style="margin: 0px;margin-top: -33px;margin-bottom: -24px;padding: -41px;">
            <span class="fw-light" style="--bs-body-font-weight: normal;--bs-body-font-size: 0.5rem;">Copyright © HarmoniGov LTDA 2023</span>
            <div class="text-center my-auto copyright"></div>
        </div>
    </footer>
</div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
}



