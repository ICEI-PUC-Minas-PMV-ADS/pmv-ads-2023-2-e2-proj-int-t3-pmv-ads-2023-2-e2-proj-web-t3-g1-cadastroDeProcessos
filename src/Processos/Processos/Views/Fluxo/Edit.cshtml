@model Processos.Models.Fluxo

@{
    ViewData["Title"] = "Editar fluxo";
}



<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="codigoFluxo" />

            <div class="form-group">


                <label asp-for="codigoSetorOrigem" class="control-label"></label>

                <input asp-for="codigoSetorOrigem" id="codigoSetorOrigem" class="form-control" style="display:none"/>
               
                <a class="fakeinput" href="javascript:speedbutton('SETOR', 'codigoSetor', 'codigoSetorOrigem', 'nome', 'exibicaoCodigoSetorOrigem')">
                     <span id="exibicaoCodigoSetorOrigem"></span>
                </a>


                <span asp-validation-for="codigoSetorOrigem" class="text-danger"></span>


            </div>
            <HR>
            <div class="form-group">
                <label asp-for="codigoSetorDestino" class="control-label"></label>
                <input asp-for="codigoSetorDestino" id="codigoSetorDestino" class="form-control" style="display:none"  />
             

                <a class='fakeinput' href="javascript:speedbutton('SETOR', 'codigoSetor', 'codigoSetorDestino', 'nome', 'exibicaoCodigoSetorDestino')">

                  <span id="exibicaoCodigoSetorDestino"></span>

                    
                </a>

                <span asp-validation-for="codigoSetorDestino" class="text-danger"></span>
  
                
            </div>
            <HR>
            <div class="form-group">
                <label asp-for="codigoTipoProcesso" class="control-label"></label>
                <input asp-for="codigoTipoProcesso" id="codigoTipoProcesso" class="form-control" style="display:none" />
                
                <a class='fakeinput ' href="javascript:speedbutton('TIPO_PROCESSO', 'codigoTipoProcesso', 'codigoTipoProcesso', 'nomeTipoProcesso', 'exibicaoTipoProcesso')">
                 <span id="exibicaoTipoProcesso"></span>
                   
                </a>
                

                <span asp-validation-for="codigoTipoProcesso" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" /> |
                <button class="btn btn-light"><a asp-controller="Fluxo" asp-action="Index">Voltar</a></button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<SCRIPT>

    $(document).ready(function () {
       
        atualizarCampoExibicao("SELECT nome FROM SETOR WHERE codigoSetor=" + valor('codigoSetorOrigem'), "exibicaoCodigoSetorOrigem");
        atualizarCampoExibicao("SELECT nome FROM SETOR WHERE codigoSetor=" + valor('codigoSetorDestino'), "exibicaoCodigoSetorDestino");
        atualizarCampoExibicao("SELECT nomeTipoProcesso FROM TIPO_PROCESSO WHERE codigoTipoProcesso=" + valor('codigoTipoProcesso'), "exibicaoTipoProcesso");

    });

</SCRIPT>