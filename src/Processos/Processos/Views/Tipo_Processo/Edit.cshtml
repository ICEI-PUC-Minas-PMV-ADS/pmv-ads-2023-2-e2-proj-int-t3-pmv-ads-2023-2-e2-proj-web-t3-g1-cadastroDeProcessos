@model Processos.Models.Tipo_Processo

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar um tipo de processo existente</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="codigoTipoProcesso" />
            <div class="form-group">
                <label asp-for="nomeTipoProcesso" class="control-label"></label>
                <input asp-for="nomeTipoProcesso" class="form-control" />
                <span asp-validation-for="nomeTipoProcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
